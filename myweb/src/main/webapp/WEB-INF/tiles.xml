<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
   <definition name="main" template="/WEB-INF/views/layout/layout.jsp">
      <put-attribute name="header" value="/WEB-INF/views/layout/header.jsp" />
      <put-attribute name="sidebar" value="/WEB-INF/views/layout/sidebar.jsp" />
      <put-attribute name="body" value="" />
      <put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp" />
   </definition>
   
   <definition name="*/*" extends="main">
   <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
   </definition>
   
   <definition name="*/*/*" extends="main"> <!-- 파일의 깊이가 다를때 따로 설정해줌 -->
   <put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp"/>
   </definition>
   
   <definition name="normalLayout" template="/WEB-INF/views/layout/nomal.jsp">
   <put-attribute name="body" value="" />
   </definition>
   
   <definition name="*/*.jsp" extends="normalLayout">
   <put-attribute name="body" value="WEB-INF/views/{1}/{2}.jsp" />
   
   </definition>
</tiles-definitions>